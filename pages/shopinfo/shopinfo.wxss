/* pages/shopinfo/shopinfo.wxss */
page{
  overflow: hidden;
  height: 100%;
}
.scroll{
  height: 100%;
}
.tianmao {
  background-color: red;
  padding: 10rpx;
  text-align: center;
}

.swiper-shop-info {
  height: 600rpx;
}

.swiper-image {
  height: 600rpx;
}

.shop-info-title {
  font-size: 50rpx;
  font-weight: 900;
  color: #000;
  padding: 10rpx;
}
.shop-info-detail{
  display: flex;
  align-items: center;
}

.shop-info-price {
  font-size: 50rpx;
  font-weight: 900;
  color: red;
  padding: 10rpx;
  flex:1;
}



.month-sale {
  text-align: center;
  font-size: 26rpx;
  color: darkgray;
  padding: 10rpx;
}


.shop-info-select {
  font-size: 30rpx;
  font-weight: 600rpx;
  color: #000;
  text-align: left;
  line-height: 50rpx;
}

.btn-area button {
  width: 100%;
  border-radius: 0;
  border-width: 0;
}

.btn-area {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.shop-select-info {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 100;
}

.mask-layer {
  height: 25%;
  width: 100%;
  background-color: #000;
  opacity: 0.5;
  -moz-opacity: 0.5;
  filter: alpha(opacity=50);
}

.shop-select-info-content {
  background: #fff;
  height: 75%;
  opacity: 1;
  -moz-opacity: 1;
  filter: alpha(opacity=100);
  position: relative;
  overflow-y:  scroll;
}

.select-info-img {
  width: 200rpx;
  height: 200rpx;
}

.select-info-close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 40rpx;
  top: 10rpx;
}

.select-info-price {
  font-size: 36rpx;
  font-weight: 900rpx;
  color: red;
  padding: 30rpx 10rpx 10rpx 10rpx;
}

.select-info-inventory {
  font-size: 36rpx;
  color: #000;
}
.select-Info-Attribute-scroll{
  height:550rpx;
}
.select-info-select {
  font-size: 36rpx;
  color: #000;
  max-width: 520rpx;
  white-space: nowrap;
  overflow: hidden;
  display: block;
  text-overflow: ellipsis;
}

.select-info-attr-list-name {
  background-color: #eaeaea;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding: 10rpx;
  margin: 10rpx;
}

.select-info-attr-list-name-press {
  background-color: red;
  border-radius: 10rpx;
  font-size: 26rpx;
  padding: 10rpx;
  margin: 10rpx;
}
.select-info-buy-bum{
  height:60rpx;
  line-height: 60rpx;
  box-sizing:  border-box;
  padding: 0rpx 10rpx;
}

.select-info-sumbit{
  border-radius: 0rpx;
}
