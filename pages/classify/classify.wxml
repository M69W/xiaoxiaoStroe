<!--pages/classify/classify.wxml-->
<view class="classify-body">
<scroll-view scroll-y="true" class="left-menu">
    <block wx:for="{{classifyList}}">
    <view class="menu-item {{index == curIndex ? 'item-active':''}}"  data-index="{{index}}" catchtap="onClickMenu">
    {{item}}
    </view>
    </block>
  </scroll-view>
  <scroll-view scroll-y="true" class="right-content">
  <view wx:for="{{shopList}}" class="content-item">
    <view class="ui-flex-ver ui-flex-center " catchtap="onItemClick" data-type = "{{item.shopTypeID}}">
      <image class="content-item-img" src="{{item.shopImg}}"></image>
      <text class="content-item-text">{{item.shopName}}</text>
    </view>
  </view>
  </scroll-view>
</view>